<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userSign.ChooseAccountActivity">

    <TextView
        android:id="@+id/Question"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/userSign_question"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"

        android:shadowColor="#FFFFFF"
        android:shadowRadius="20"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/driverButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:autoSizeMaxTextSize="25dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/usersign_chooseaccountbutton"

        android:drawableTop="@drawable/baseline_directions_car_72"

        android:outlineSpotShadowColor="@color/white"

        android:gravity="center"

        android:paddingTop="300sp"
        android:paddingBottom="300sp"
        android:text="@string/userSign_respMot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/passengerButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Question"
        app:layout_constraintVertical_bias="0.499" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/passengerButton"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:autoSizeMaxTextSize="25dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/usersign_chooseaccountbutton"

        android:outlineSpotShadowColor="@color/white"

        android:drawableTop="@drawable/baseline_backpack_48"
        android:gravity="center"

        android:paddingTop="300sp"
        android:paddingBottom="300sp"
        android:text="@string/userSign_respPass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/driverButton"
        app:layout_constraintTop_toBottomOf="@+id/Question" />

</androidx.constraintlayout.widget.ConstraintLayout>